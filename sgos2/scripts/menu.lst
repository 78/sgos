# default - boot the first entry
default 0

# if have problem boot the second entry
fallback 1

# after 30 secs boot default
timeout 1

# Set the color ;)
color light-green/black blink-red/black

# SGOS2
title SGOS2
	root (hd0,0)
	kernel /sgos2/kernel.bin root=/dev/hda0
	module /sgos2/api.bxm
	module /sgos2/libc.bxm
	module /sgos2/msg.bxm
	module /sgos2/hello.run

# Halt the machine
title Turn off power!
halt

# Reboot the computer
title Reboot
reboot



